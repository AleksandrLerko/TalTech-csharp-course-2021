<table>
        <div class="Battlefield">
            
                <table class="Battle-table">
                    <tbody>
                    @foreach (var gameBoard in Model.GameBoard)
                    {
                        var count = 0;
                        @foreach (var board in gameBoard!.BoardA)
                            {
                                if (count == 0)
                                {
                                    <tr>
                                        @foreach (var i in board)
                                        {
                                            if (i.IsShip)
                                            {
                                                <td>8</td>
                                            }
                                            else
                                            {
                                                <td>-</td>
                                            }
                                        }
                                    </tr>
                                }
                                count++;
                            }
                    }
                    </tbody>
                </table>
