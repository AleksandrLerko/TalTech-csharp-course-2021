@page
@model WebApp.Pages_Ships.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ship</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ship.ShipId" />
            <div class="form-group">
                <label asp-for="Ship.ShipName" class="control-label"></label>
                <input asp-for="Ship.ShipName" class="form-control" />
                <span asp-validation-for="Ship.ShipName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ship.Coordinates" class="control-label"></label>
                <input asp-for="Ship.Coordinates" class="form-control" />
                <span asp-validation-for="Ship.Coordinates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ship.Length" class="control-label"></label>
                <input asp-for="Ship.Length" class="form-control" />
                <span asp-validation-for="Ship.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ship.Height" class="control-label"></label>
                <input asp-for="Ship.Height" class="form-control" />
                <span asp-validation-for="Ship.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ship.Direction" class="control-label"></label>
                <input asp-for="Ship.Direction" class="form-control" />
                <span asp-validation-for="Ship.Direction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ship.GameBoardId" class="control-label"></label>
                <select asp-for="Ship.GameBoardId" class="form-control" asp-items="ViewBag.GameBoardId"></select>
                <span asp-validation-for="Ship.GameBoardId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
