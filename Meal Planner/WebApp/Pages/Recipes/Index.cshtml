@page
@model WebApp.Pages_Recipes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Recipes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get">
        <div class="row">
            <div class="col-4">
                <div class="mb-3">
                    <label for="searchByCategory" class="form-label">Search by category</label>
                    <input type="text" class="form-control" id="searchByCategory" name="searchByCategory" placeholder="sea food..." value="@Model.SearchByCategory">
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-1">
                    <input type="submit" value="Search" name="action" class="btn btn-primary"/>
                </div>
                <div>
                    @if (Model.SearchByCategory != null)
                        {
                            <input type="submit" value="Clear" name="action" class="btn btn-warning"/>
                        }
                </div>
            </div>
        </div>
    </form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].RecipeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe[0].TimeNeeded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipe) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeNeeded)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
