@page
@model WebApp.Pages_Recipes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.RecipeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.RecipeName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Category)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Servings)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Servings)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.TimeNeeded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.TimeNeeded)
        </dd>
    </dl>
</div>
<h4>Ingredients</h4>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Recipe!.RecipeIngredients!.First().Ingredient)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Recipe!.RecipeIngredients!.First().Qty)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Recipe.RecipeIngredients!) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient!.IngredientName)<br/>
                <small>@Html.DisplayFor(modelItem => item.Comment)</small>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qty)
            </td>
            <td>
                <a asp-page="/RecipeIngredients/Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="/RecipeIngredients/Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe.Id">Edit</a> |
    <a asp-page="/Index">Back to List</a>
</div>
